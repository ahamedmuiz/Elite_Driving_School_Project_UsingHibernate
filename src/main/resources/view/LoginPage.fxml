<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="600.0" prefHeight="400.0"
            fx:controller="com.driving_school_hibernate.controller.LoginPageController">

    <children>
        <!-- StackPane keeps VBox centered -->
        <StackPane AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <children>
                <VBox spacing="20" alignment="CENTER" maxWidth="400">
                    <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                    </padding>

                    <!-- Title -->
                    <Label text="Elite Driving School" style="-fx-font-size: 2em; -fx-font-weight: bold;"/>

                    <!-- Username -->
                    <TextField fx:id="txtUsername" promptText="Enter Username" maxWidth="Infinity"/>

                    <!-- Password with toggle -->
                    <HBox spacing="10" alignment="CENTER">
                        <StackPane maxWidth="Infinity" HBox.hgrow="ALWAYS">
                            <children>
                                <PasswordField fx:id="txtPassword" promptText="Enter Password" maxWidth="Infinity"/>
                                <TextField fx:id="txtVisiblePassword" promptText="Enter Password"
                                           visible="false" managed="false" maxWidth="Infinity"/>
                            </children>
                        </StackPane>
                        <CheckBox fx:id="chkShowPassword" text="Show"/>
                    </HBox>

                    <!-- Buttons -->
                    <HBox spacing="15" alignment="CENTER">
                        <Button fx:id="btnLogin" text="Login"
                                style="-fx-background-color: #0078D7; -fx-text-fill: white;"
                                maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnClear" text="Clear"
                                maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <!-- Error Label -->
                    <Label fx:id="lblError" textFill="red" visible="false" wrapText="true"
                           textAlignment="CENTER" maxWidth="Infinity"/>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
