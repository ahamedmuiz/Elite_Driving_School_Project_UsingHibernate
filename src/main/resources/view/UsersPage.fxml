<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.driving_school_hibernate.controller.UsersPageController">

    <!-- Top Title -->
    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Label text="User Management"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Form -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <GridPane hgap="15" vgap="12" alignment="CENTER_LEFT">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                </columnConstraints>

                <Label text="User ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUserId" promptText="Auto-generated" editable="false"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsername" promptText="Enter username"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtEmail" promptText="Enter email address"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" promptText="Enter password"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Role:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbRole" GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Admin"/>
                            <String fx:value="User"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </GridPane>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAdd" text="Add" onAction="#handleAddUser"
                        style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-pref-width: 100;"/>
                <Button fx:id="btnUpdate" text="Update" onAction="#handleUpdateUser"
                        style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-pref-width: 100;"/>
                <Button fx:id="btnDelete" text="Delete" onAction="#handleDeleteUser"
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-pref-width: 100;"/>
                <Button fx:id="btnClear" text="Clear" onAction="#handleClearForm"
                        style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-pref-width: 100;"/>
            </HBox>

            <!-- Search Section -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                <Label text="Search by Username:"/>
                <TextField fx:id="txtSearch" promptText="Enter username"/>
                <Button fx:id="btnSearch" text="Search" onAction="#handleSearchUser"
                        style="-fx-background-color: #F39C12; -fx-text-fill: white;"/>
                <Button fx:id="btnViewAll" text="View All" onAction="#handleViewAllUsers"
                        style="-fx-background-color: #2ECC71; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Table -->
    <bottom>
        <VBox style="-fx-padding: 20;">
            <TableView fx:id="tblUsers" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colUserId" text="User ID" prefWidth="100"/>
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colRole" text="Role" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </bottom>

</BorderPane>
