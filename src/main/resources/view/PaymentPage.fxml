<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.driving_school_hibernate.controller.PaymentPageController">

    <!-- Top Title -->
    <top>
        <HBox alignment="CENTER_LEFT"
              style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Label text="Payment Management"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Form -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <GridPane hgap="15" vgap="12" alignment="CENTER_LEFT">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                </columnConstraints>

                <Label text="Payment ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPaymentId" promptText="Auto-generated" editable="false"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Student:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbStudent" promptText="Select student"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Course:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbCourse" promptText="Select course"
                          GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Amount (LKR):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtAmount" promptText="Enter amount"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePayment"
                            GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Method:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="choiceMethod" GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Cash"/>
                            <String fx:value="Card"/>
                            <String fx:value="Bank Transfer"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>

                <Label text="Status:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ChoiceBox fx:id="choiceStatus" GridPane.rowIndex="6" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Pending"/>
                            <String fx:value="Completed"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </GridPane>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="btnAdd" text="Add" onAction="#handleAddPayment"
                        style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-pref-width: 100;"/>
                <Button fx:id="btnUpdate" text="Update" onAction="#handleUpdatePayment"
                        style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-pref-width: 100;"/>
                <Button fx:id="btnDelete" text="Delete" onAction="#handleDeletePayment"
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-pref-width: 100;"/>
                <Button fx:id="btnClear" text="Clear" onAction="#handleClearForm"
                        style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-pref-width: 100;"/>
            </HBox>

            <!-- Search Section -->
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                <Label text="Search by Student:"/>
                <TextField fx:id="txtSearch" promptText="Enter student name"/>
                <Button fx:id="btnSearch" text="Search" onAction="#handleSearchPayment"
                        style="-fx-background-color: #F39C12; -fx-text-fill: white;"/>
                <Button fx:id="btnViewAll" text="View All" onAction="#handleViewAllPayments"
                        style="-fx-background-color: #2ECC71; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Table -->
    <bottom>
        <VBox style="-fx-padding: 20;">
            <TableView fx:id="tblPayments" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colPaymentId" text="Payment ID" prefWidth="100"/>
                    <TableColumn fx:id="colStudent" text="Student" prefWidth="150"/>
                    <TableColumn fx:id="colCourse" text="Course" prefWidth="150"/>
                    <TableColumn fx:id="colAmount" text="Amount (LKR)" prefWidth="120"/>
                    <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="colMethod" text="Method" prefWidth="120"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </bottom>

</BorderPane>
