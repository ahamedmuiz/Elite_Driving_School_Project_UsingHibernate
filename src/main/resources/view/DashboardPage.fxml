<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.driving_school_hibernate.controller.DashboardPageController">

    <!-- Top Header -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #2C3E50; -fx-padding: 20;">
            <Label text="Driving School Dashboard"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Left Navigation Panel -->
    <left>
        <VBox spacing="12" style="-fx-background-color: #34495E; -fx-padding: 20;">
            <Button fx:id="btnStudents" text="Students"
                    onAction="#handleStudents"
                    style="-fx-background-color: #1ABC9C; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="btnCourses" text="Courses"
                    onAction="#handleCourses"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="btnInstructors" text="Instructors"
                    onAction="#handleInstructors"
                    style="-fx-background-color: #9B59B6; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="btnEnrollments" text="Enrollments"
                    onAction="#handleEnrollments"
                    style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="btnUsers" text="Users"
                    onAction="#handleUsers"
                    style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 14px;" />
            <Button fx:id="btnLogout" text="Logout"
                    onAction="#handleLogout"
                    style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px;" />
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
        </VBox>
    </left>

    <!-- Center Content Area -->
    <center>
        <StackPane fx:id="mainContent"
                   style="-fx-background-color: #ECF0F1;"
                   BorderPane.alignment="CENTER" />
    </center>

    <!-- Bottom Footer -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #BDC3C7; -fx-padding: 10;">
            <Label text="Â© 2025 Elite Systems" style="-fx-text-fill: #2C3E50;" />
        </HBox>
    </bottom>

</BorderPane>
